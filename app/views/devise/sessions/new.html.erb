<section id="login">
<div class="container brand-forms">
<h2>Sign In</h2>
<p class="text-center lead-text">Welcome Back! Log in and do stuff!</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class: 'control-label col-md-5 text-right' %>
    <div class="col-md-4"><%= f.email_field :email, autofocus: true, class: 'form-control' %></div>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: 'contol-label col-md-5 text-right' %>
    <div class="col-md-4"><%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group">
      <div class="col-md-4 col-md-offset-5"><%= f.check_box :remember_me %>
            <%= f.label :remember_me %></div>
    </div>
  <% end -%>
<div class="col-md-4 col-md-offset-5">
  <div class="actions" id="submit-button">
    <%= f.submit "Log In", class: 'btn btn-lg btn-success' %>
  </div>
</div>
<% end %>
<div class="col-md-4 col-md-offset-5">
<%= render "devise/shared/links" %>
</div>
</div>
</section>